<!--A very basic "form". The form_for tags and elements can be embedded in any form of HTML-->

<br>
<div class='align-center'>

	<h1>New Entrepreneur</h1>
	<%= form_for :entrepreneur, url: entrepreneurs_path do |f| %>
	  <p>
		<%= f.label :name %><br>
		<%= f.text_field :name%>
	  </p>

	  <p>
		<%= f.label :degree %><br>
		<%= f.text_field :degree %>
	  </p>

	  <p>
		<%= f.label :place %><br>
		<%= f.text_field :place %>
	  </p>

	<!--  TODO:
	  <p>
		<%= f.label :languages %><br>
		<%= f.text_field :languages %>
	  </p>
	  -->

	  <p>
		<%= f.label :country %><br>
		<%= f.text_field :country %> <!--TODO: make selecatble from drop down-->
	  </p>

	  <p>
		<%= f.label :about %><br>
		<%= f.text_area :about %>
	  </p>

	  <p>
		<%= f.submit %>
	  </p>
	<% end %>

</div>